
<div class="container" id="CanvasDiv">
    <div class="row">
        <div>
            <img src="~/@TempData["ImagePath"]" alt="" srcset="" style="display:none;" id="my-image">
        </div>
        <div class="col-md-6 offset-md-3">
            <div class="btn-group">
                <button id="draw-poly" class="btn btn-default">Draw Polygon</button>
                <button id="reset" disabled="disabled" class="btn btn-default">Reset</button>
                <button id="submit" disabled="disabled" class="btn btn-danger">Submit</button>
            </div>
            <div class="slidecontainer">
                <input type="range" min="1" max="100" value="50" class="slider form-control" id="myRange">
                <p class="text-primary">
                    Details Precision:
                    <span class="text-danger" id="demo"></span>
                </p>
            </div>
        </div>
        <div class="col-md-12">
            <canvas id="c"></canvas>
        </div>
    </div>
</div>


@section Styles{
    <link rel="stylesheet" href="~/css/CanvasDrawer.css" />
}
@section Scripts {
    <script src="~/js/fabric.min.js"></script>
    <script src="~/js/Canvas.js"></script>
}